<h1> New Article </h1>

<%=form_for :article, url: articles_path do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %><br>
	</p>

	<p>
		<%= f.label :author %><br>
		<%= f.text_field :author %><br>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>

		<%= f.check_box :validated %> accept
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>